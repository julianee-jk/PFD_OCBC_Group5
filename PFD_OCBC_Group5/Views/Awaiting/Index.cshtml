@{
    ViewData["Title"] = "Index";
}

<head>
    <script src="/js/awaiting.js"></script>
</head>

<div class="loader">
    <a asp-controller="JointAccount" asp-action="Index">
        <img src="/images/loader.gif" />
    </a>

    @if (Context.Session.GetString("Type") == "Singpass")
    {
        <h2>Waiting for Second Applicant to Finish</h2>
    }
    else
    {
        <h2>Thank you for completing the form! Please wait for the second joint account holder to
            complete his/her application. Once complete, it will take a few days for us to verify your application!
            An email will be sent to you once the application process is verified. Thank you for your understanding!</h2>
    }
</div>

<link rel="stylesheet" href="~/css/awaiting.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<script type="text/javascript" language="javascript">

    function redirect_Page() {
        if (Context.Session.GetString("Type") == "Singpass") {
            window.open("/Singpass/SingpassLogin");
        }
        else
        {
            window.open("/AccountForm/PersonInfo");
        }

    }
    window.onload = redirect_Page()


</script>