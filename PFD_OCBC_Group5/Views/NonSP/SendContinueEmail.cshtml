@model PFD_OCBC_Group5.Models.SecondEmail

@{
    ViewData["Title"] = "Verification Code";
}

<h3 style="margin-top: 3em">Enter your email address</h3>
<p style="color: grey; font-size: 10px">If you have saved your information</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendContinueEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddr" class="control-label"></label>
                <input name="EmailAddr" asp-for="EmailAddr" class="form-control"/>
                <span asp-validation-for="EmailAddr" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="ConfirmEmailAddr" class="control-label"></label>
                    <input asp-for="ConfirmEmailAddr" class="form-control" onpaste="return false;" ondrop="return false;"/>
                    <span asp-validation-for="ConfirmEmailAddr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RelationShipToApplicant" class="control-label" hidden></label>
                    <input asp-for="RelationShipToApplicant" class="form-control" onpaste="return false;" ondrop="return false;" value="NA" hidden/>
                    <span asp-validation-for="RelationShipToApplicant" class="text-danger" hidden></span>
                    <div class="text-center">
                        <span class="text-danger">@TempData["CodeErrorMessage"]</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>